# ============================================
# SurvyAI Environment Configuration Template
# ============================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# ============================================
# REQUIRED: API Keys
# ============================================

# DeepSeek API Key (Required)
# Get your API key from: https://platform.deepseek.com
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Google Gemini API Key (Required)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ============================================
# Optional: DeepSeek Configuration
# ============================================

# DeepSeek API Base URL (Optional - has default)
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# ============================================
# Optional: Agent Configuration
# ============================================

# Primary LLM to use: "deepseek" or "gemini" (default: "deepseek")
PRIMARY_LLM=deepseek

# Fallback LLM to use if primary fails: "deepseek" or "gemini" (default: "gemini")
FALLBACK_LLM=gemini

# Agent temperature for LLM responses (0.0-1.0, default: 0.3)
AGENT_TEMPERATURE=0.3

# Maximum tokens for LLM responses (default: 4000)
AGENT_MAX_TOKENS=200000

# ============================================
# Optional: ArcGIS Pro Integration
# ============================================

# Path to ArcGIS Pro Python environment (Optional)
# Only needed if using ArcGIS Pro features
# Example Windows path: C:\Program Files\ArcGIS\Pro\bin\Python\envs\arcgispro-py3
# Leave empty if not using ArcGIS Pro
ARCGIS_PRO_PATH=C:\\Program Files\ArcGIS\Pro\bin\Python\envs\arcgispro-py3

# ============================================
# Optional: Blue Marble Geographic Calculator
# ============================================

# Path to Blue Marble Geographic Calculator installation (Optional)
# Only needed if using coordinate conversion features
# Example: C:\Program Files\Blue Marble Geographics\GeoCalc
# Leave empty if not using Blue Marble
BLUE_MARBLE_PATH=C:\\Program Files\\Blue Marble Geo\\Geographic Calculator

# ============================================
# Optional: Logging Configuration
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Log file path (default: survyai.log)
LOG_FILE=survyai.log

# Configuration for VectorStore via ChromaDB
VECTOR_STORE_ENABLED=True
VECTOR_STORE_PATH=.survyai_vectordb
EMBEDDING_PROVIDER=local
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# Context Retrieval Settings
# Enable automatic retrieval of relevant context from past conversations and documents
AUTO_CONTEXT_RETRIEVAL=True
# Number of relevant context items to retrieve
CONTEXT_RETRIEVAL_TOP_K=5
# Automatically store conversations for future context
AUTO_STORE_CONVERSATIONS=True
# Minimum similarity score (0-1) for context to be included
CONTEXT_SCORE_THRESHOLD=0.3
